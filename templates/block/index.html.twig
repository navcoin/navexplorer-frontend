{% extends "base.html.twig" %}

{% block title %}Blocks{% endblock %}
{% block description %}Blocks on the Navcoin Chain{% endblock %}

{% block page %}page-block-index{% endblock %}

{% block body %}
    <div class="home">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div id="block-list">
                        <div class="clearfix">
                            <h1 class="float-left">Blocks</h1>
                            <div class="table-total"></div>
                        </div>

                        <div class="table-filters"></div>
                        <div class="table-pagination"></div>
                        <table class="table table-striped table-adaptive table-nav table-bottom-stripe">
                            <thead class="loading">
                            <tr>
                                <th>Hash</th>
                                <th>Height</th>
                                <th>Age</th>
                                <th class="text-center">Transactions</th>
                                <th>Staked By</th>
                                <th class="text-right">Stake</th>
                            </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                        <div class="table-pagination"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
