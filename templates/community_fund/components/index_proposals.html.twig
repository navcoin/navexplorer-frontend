<div class="row">
    <div class="col-md-8">
        <h2>{{ active|capitalize }} Proposals</h2>
    </div>
    <div class="col-md-4">
        <div class="filters float-right">
            <ul class="list-inline">
                <li class="list-inline-item">
                    <a class="{{ active == 'pending' ? 'active' : '' }}" href="{{ path('app_communityfund_index', {'state': 'pending'}) }}">Pending</a>
                </li>
                <li class="list-inline-item">
                    <a class="{{ active == 'accepted' ? 'active' : '' }}" href="{{ path('app_communityfund_index', {'state': 'accepted'}) }}">Accepted</a>
                </li>
                <li class="list-inline-item">
                    <a class="{{ active == 'rejected' ? 'active' : '' }}" href="{{ path('app_communityfund_index', {'state': 'rejected'}) }}">Rejected</a>
                </li>
                <li class="list-inline-item">
                    <a class="{{ active == 'expired' ? 'active' : '' }}" href="{{ path('app_communityfund_index', {'state': 'expired'}) }}">Expired</a>
                </li>
                <li class="list-inline-item">
                    <a class="{{ active == 'pending-funds' ? 'active' : '' }}" href="{{ path('app_communityfund_index', {'state': 'pending-funds'}) }}">Pending Funds</a>
                </li>
            </ul>
        </div>
    </div>
</div>

{% if active == 'accepted' %}
    {% include "community_fund/components/index_proposals_accepted.html.twig" %}
{% else %}
    {% include "community_fund/components/index_proposals_default.html.twig"%}
{% endif %}
