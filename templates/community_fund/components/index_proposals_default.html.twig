<div class="row">
    {% for proposal in proposals %}
        <div class="col-sm-6 col-md-4 col-lg-4">
            <div class="card card-proposal">
                {% include "community_fund/components/proposal/proposal-header.html.twig" %}

                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        Payment Address<br>
                        <a href="#" class="break-word">{{ proposal.paymentAddress }}</a>
                    </li>
                    <li class="list-group-item">
                        NAV Requested
                        <span class="float-right">{{ proposal.requestedAmount|stake_format }}</span>
                    </li>
                    <li class="list-group-item">
                        NAV Paid
                        <span class="float-right">{{ (proposal.requestedAmount - proposal.notYetPaid)|stake_format }}</span>
                    </li>
                    <li class="list-group-item">
                        {{ proposalVoteProgress(proposal, blockCycle) }}
                        <p class="text-muted">
                            <span class="float-left">
                                Accept {{ proposal.proposalVotes.latestVotes.votesYes }} / Reject {{ proposal.proposalVotes.latestVotes.votesNo }}
                            </span>
                            <span class="float-right">Cycle: {{ proposal.proposalVotes.latestVotes.votingCycle }}</span>
                        </p>
                    </li>
                </ul>

                {% include "community_fund/components/proposal/proposal-footer.html.twig" %}
            </div>
        </div>
    {% else %}
        <div class="col-md-12">
            {% if active == 'pending-funds' %}
                <p>There are no proposals pending funding</p>
            {% else %}
                <p>There are no {{ active }} proposals</p>
            {% endif %}
        </div>
    {% endfor %}
</div>