<div class="card card-proposal card-nav">
    <div class="card-header">
        <h2 class="clamp" data-lines="3">{{ proposal.description|capitalize}}</h2>
    </div>

    <div class="card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                Proposal Hash
                <span class="float-right">
                    <a href="{{ path('app_communityfund_view', {'hash': proposal.hash}) }}" class="break-word">
                        {{ proposal.hash[0:10] }}...{{ proposal.hash[proposal.hash|length-4:] }}
                    </a>
                </span>
            </li>
            <li class="list-group-item">
                NAV Requested
                <span class="float-right">{{ proposal.requestedAmount|stake_format }}</span>
            </li>
            <li class="list-group-item">
                NAV Paid
                <span class="float-right">{{ (proposal.requestedAmount - proposal.notYetPaid)|stake_format }}</span>
            </li>
            <li class="list-group-item">
                Duration
                <span class="float-right">{{ proposal.duration }}</span>
            </li>
            <li class="list-group-item">
                {{ proposalVoteProgress(proposal, blockCycle) }}
                <p class="text-muted">
                <span class="float-left">
                    Accept {{ proposal.votesYes }} / Reject {{ proposal.votesNo }} / Abstain {{ proposal.votesAbs }}
                </span>
                    <span class="float-right">Cycle: {{ proposal.votingCycle }}</span>
                </p>
            </li>
            <li class="list-group-item">
                Status
                <span class="float-right">{{ proposal.status|title }}</span>
            </li>
        </ul>
    </div>

    <div class="card-footer">
        <div class="d-flex justify-content-around">
            <a href="{{ path('app_communityfund_view', {'hash': proposal.hash}) }}">View Proposal</a>
        </div>
    </div>
</div>