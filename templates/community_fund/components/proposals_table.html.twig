<table class="table table-striped table-adaptive">
    <thead>
        <tr>
            <th>Description</th>
            <th>Hash</th>
            <th>Payment Address</th>
            <th>Request&nbsp;Amount</th>
        </tr>
    </thead>
    <tbody>
        {% for proposal in proposals %}
            <tr>
                <td>{{ proposal.description }}</td>
                <td><a href="{{ path('app_transaction_view', { 'hash': proposal.hash }) }}" class="break-word">{{ proposal.hash }}</a></td>
                <td><a href="{{ path('app_address_index', { 'hash': proposal.paymentAddress }) }}" class="break-word">{{ proposal.paymentAddress }}</a></td>
                <td>{{ proposal.requestedAmount|stake_format }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>