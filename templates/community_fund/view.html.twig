{% extends "base.html.twig" %}

{% block title %}Community Fund{% endblock %}

{% block page %}page-communityFund-index{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1>Community Fund</h1>
            </div>
        </div>

        <div class="row row-proposal-description">
            <div class="col-md-8">
                <h2 class="w-75"><span class="break-word">{{ proposal.hash }}</span></h2>
                <p>{{ proposal.description }}</p>
            </div>
            <div class="col-md-4">
                <h3>{{ include('community_fund/components/view_badge.html.twig') }}</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <table class="table table-striped table-proposal">
                    <tbody>
                        <tr>
                            <td><strong>Version</strong></td>
                            <td class="text-right break-word">{{ proposal.version }}</td>
                        </tr>
                        <tr>
                            <td><strong>Hash</strong></td>
                            <td class="text-right break-word">{{ proposal.hash }}</td>
                        </tr>
                        <tr>
                            <td><strong>Block&nbsp;Hash</strong></td>
                            <td class="text-right break-word">
                                <a href="{{ path('app_search_search', {'query': proposal.blockHash}) }}">{{ proposal.blockHash }}</a>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Payment&nbsp;Address</strong></td>
                            <td class="text-right break-word">
                                <a href="{{ path('app_address_index', {'hash': proposal.paymentAddress}) }}">{{ proposal.paymentAddress }}</a>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>NAV&nbsp;Requested</strong></td>
                            <td class="text-right break-word">{{ proposal.requestedAmount|stake_format }}</td>
                        </tr>
                        <tr>
                            <td><strong>NAV&nbsp;Paid</strong></td>
                            <td class="text-right break-word">{{ (proposal.requestedAmount - proposal.notYetPaid)|stake_format }}</td>
                        </tr>
                        <tr>
                            <td><strong>Fee</strong></td>
                            <td class="text-right break-word">{{ proposal.userPaidFee|stake_format }}</td>
                        </tr>
                        {% if proposal.approvedOnBlock %}
                            <tr>
                                <td><strong>Approved On Block</strong></td>
                                <td class="text-right break-word">
                                    <a href="{{ path('app_search_search', {'query': proposal.blockHash}) }}">{{ proposal.approvedOnBlock }}</a>
                                </td>
                            </tr>
                        {% endif %}
                        {% if proposal.expiresOn %}
                            <tr>
                                <td><strong>Approved On Block</strong></td>
                                <td class="text-right break-word">{{ proposal.expiresOn|date_localised('M jS Y, g:i:s a') }}</td>
                            </tr>
                        {% endif %}
                        <tr>
                            <td><strong>Creation Date</strong></td>
                            <td class="text-right break-word">{{ proposal.createdAt|date_localised('M jS Y, g:i:s a') }}</td>
                        </tr>
                        <tr>
                            <td><strong>Status</strong></td>
                            <td class="text-right break-word">{{ proposal.status|capitalize }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="col-md-4">
                {{ include('community_fund/components/view_voting.html.twig') }}
            </div>
        </div>

        {% if proposal.state == 'ACCEPTED' %}
            {#<div class="row">#}
                {#<div class="col-md-12">#}
                    {#{{ include('community_fund/components/view_payment_requests.html.twig') }}#}
                {#</div>#}
            {#</div>#}
        {% endif %}

        <div class="row">
            <div class="col-md-12">
                <br>
                <a class="btn btn-info" href="{{ path('app_communityfund_index', {'state': proposal.state|lower}) }}">Back to Proposals</a>
            </div>
        </div>
    </div>
{% endblock %}