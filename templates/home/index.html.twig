{% extends "base.html.twig" %}

{% block title %}NavCoin Block Explorer{% endblock %}

{% block page %}page-home-index{% endblock %}

{% block body %}
    <div class="home">
        <div class="container-fluid">
            {% include 'home/components/hud.html.twig' %}

            <div class="row">
{#                <div class="col-sm-12 col-md-6">#}
{#                    {% include 'home/components/overview.html.twig' %}#}
{#                </div>#}
                <div class="col-sm-12 col-md-6 margin-top margin-bottom">
                    {% include 'home/components/market-chart.html.twig' %}
                </div>

                <div class="col-sm-12 col-md-6 margin-top margin-bottom">
                    {% include 'home/components/address-groups.html.twig' %}
