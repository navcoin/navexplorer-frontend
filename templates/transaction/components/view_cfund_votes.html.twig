<h2>Votes</h2>

<table class="table table-striped table-adaptive">
    <thead>
        <tr>
            <th style="width: 5%">Index</th>
            <th style="width: 85%">Proposal</th>
            <th style="width: 10%">Vote</th>
        </tr>
    </thead>
    <tbody>
        {% for output in transaction.outputs if output.communityFund %}
            <tr>
                <td data-role="index">{{ output.index }}</td>
                <td data-role="proposal"><a class="break-word" href="{{ path('app_communityfund_view', {'hash': output.hash}) }}">{{ output.hash }}</a></td>
                <td data-role="vote">{{ output.proposalVote == true ? 'Yes' : 'No' }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>